@{
    ViewData["Title"] = "Home Page";
}

@model Mission10_Sheffield.Models.ViewModels.BooksListViewModel

<div class="mt-4">
    @foreach (var book in Model.Books)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@book.Title
                    <span class="badge badge-pill bg-primary pull-right mx-2">@book.PageCount pages</span>
                    </h5>
                <p class="card-text"><strong>Author:</strong> @book.Author</p>
                <p class="card-text"><strong>Publisher:</strong> @book.Publisher</p>
                <p class="card-text"><strong>ISBN:</strong> @book.Isbn</p>
                <p class="card-text"><strong>Classification:</strong> @book.Classification</p>
                <p class="card-text"><strong>Price:</strong> @book.Price</p>
            </div>
        </div>
    }
</div>


<div page-model="@Model.PaginationInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right"></div>



