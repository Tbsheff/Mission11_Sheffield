<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Mission10_Sheffield</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Mission10_Sheffield.styles.css" asp-append-version="true"/>
</head>
<body>
<div class="bg-dark text-white p-2">
    <span class="navbar-brand m-lg-2">The Bookstore Project</span>
</div>


    <main role="main" class="pb-3">
        @RenderBody()
    </main>


<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Mission10_Sheffield - 
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>